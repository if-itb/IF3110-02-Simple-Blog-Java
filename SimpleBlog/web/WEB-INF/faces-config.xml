<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    
    <application>
        <el-resolver>id.ac.itb.informatika.wbd.jsf.JsfCrudELResolver</el-resolver>
    </application>
    
    <navigation-rule>
        <navigation-case>
            <from-outcome>post_list</from-outcome>
            <to-view-id>postList.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <navigation-case>
            <from-outcome>post_new</from-outcome>
            <to-view-id>postNew.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <navigation-case>
            <from-outcome>post_edit</from-outcome>
            <to-view-id>postNew.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
</faces-config>
